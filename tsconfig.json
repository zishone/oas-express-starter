{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "files": true
  }
}
