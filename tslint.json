{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": ["src/database/**"]
  },
  "rules": {
    "interface-name": false,
    "max-line-length": [
      true,
      300
    ],
    "no-console": [
      true,
      "time",
      "timeEnd",
      "trace"
    ],
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "ban-keywords",
      "check-format"
    ]
  }
}
